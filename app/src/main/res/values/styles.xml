<resources>


    <style name = "TabLayoutStyle" parent = "Widget.Design.TabLayout">
        <item name = "tabIndicatorColor">@color/colorAccent</item>
        <item name = "android:background">@drawable/tab_status</item>
        <item name = "tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name = "MyCustomTextAppearance" parent = "TextAppearance.Design.Tab">
        <item name = "textAllCaps">false</item>
    </style>

    <style name = "WebTitle"
           parent = "@android:style/TextAppearance">
        <item name = "android:textSize">18dp</item>
        <item name = "android:textColor">@android:color/white</item>
        <item name = "android:ellipsize">marquee</item>
        <item name = "android:marqueeRepeatLimit">marquee_forever</item>
        <item name = "android:scrollHorizontally">true</item>
        <item name = "android:singleLine">true</item>
    </style>

    <style name = "ViaTextAppearance">
        <item name = "android:textSize">12sp</item>
        <item name = "android:textColor">@color/text_second_color_primary</item>
    </style>


    <style name = "CardPhoto">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:tint">@color/photo_tint</item>
        <item name = "android:scaleType">centerCrop</item>

        <item name = "riv_corner_radius">@dimen/card_corner_radius</item>
    </style>

    <style name = "CardTitle">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:textColor">#fff</item>
        <item name = "android:textSize">28sp</item>
        <item name = "android:fontFamily">sans-serif-light</item>
        <item name = "android:gravity">bottom|left</item>
        <item name = "android:paddingLeft">16dp</item>
        <item name = "android:paddingBottom">8dp</item>
        <item name = "android:onClick">showPhoto</item>
        <item name = "android:clickable">true</item>
        <item name = "android:focusable">true</item>
        <item name = "android:background">?selectableItemBackground</item>
    </style>

    <style name = "FloatingCard">
        <item name = "android:layout_width">@dimen/floating_button_size</item>
        <item name = "android:layout_height">@dimen/floating_button_size</item>
        <item name = "android:layout_marginBottom">@dimen/floating_button_margin</item>

        <item name = "cardBackgroundColor">@android:color/transparent</item>
        <item name = "cardCornerRadius">@dimen/floating_button_card_radius</item>
        <item name = "cardElevation">@dimen/button_elevation</item>
        <item name = "cardPreventCornerOverlap">false</item>
    </style>

    <style name = "FloatingButton">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">match_parent</item>
    </style>
</resources>
