                <!--android:layout_height = "18dp"-->
                <!--android:scaleType = "centerInside"-->
                <!--android:src = "@mipmap/ic_launcher"-->
                <!--app:tintColor = "?attr/colorPrimary" />-->
        </LinearLayout>
    </android.support.v7.widget.CardView>
</com.balysv.materialripple.MaterialRippleLayout>